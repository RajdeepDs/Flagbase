{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "linter": {
        "rules": {
            "performance": {
                "noBarrelFile": "off"
            },
            "complexity": {
                "noBannedTypes": "off"
            },
            "suspicious": {
                "noEmptyInterface": "off"
            },
            "style": {
                "useConsistentTypeDefinitions": {
                    "options": {
                        "style": "interface"
                    },
                    "level": "error"
                }
            }
        }
    },
    "files": {
        "ignoreUnknown": false,
        "includes": [
            "**",
            "!**/.next",
            "!**/dist",
            "!**/.turbo",
            "!**/dev-dist",
            "!**/.zed",
            "!**/.vscode",
            "!**/routeTree.gen.ts",
            "!**/src-tauri",
            "!**/.nuxt",
            "!bts.jsonc",
            "!**/.expo",
            "!**/.wrangler",
            "!**/.alchemy",
            "!**/.svelte-kit",
            "!**/wrangler.jsonc",
            "!**/.source",
            "!**/components/ui"
        ]
    },
    "extends": [
        "ultracite/core",
        "ultracite/next"
    ]
}

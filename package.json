{
  "name": "flagbase",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "@orpc/server": "^1.13.2",
      "@orpc/openapi": "^1.13.2",
      "@orpc/zod": "^1.13.2",
      "@orpc/contract": "^1.13.2",
      "better-auth": "^1.4.9",
      "@prisma/client": "^7.1.0",
      "@orpc/client": "^1.13.2"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:api": "turbo -F api dev",
    "db:push": "turbo -F @flagbase/db db:push",
    "db:studio": "turbo -F @flagbase/db db:studio",
    "db:generate": "turbo -F @flagbase/db db:generate",
    "db:migrate": "turbo -F @flagbase/db db:migrate",
    "db:start": "turbo -F @flagbase/db db:start",
    "db:watch": "turbo -F @flagbase/db db:watch",
    "db:stop": "turbo -F @flagbase/db db:stop",
    "db:down": "turbo -F @flagbase/db db:down",
    "prepare": "husky"
  },
  "dependencies": {
    "@flagbase/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@flagbase/config": "workspace:*",
    "@types/bun": "catalog:",
    "husky": "^9.1.7",
    "lint-staged": "latest",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "ultracite": "7.0.8"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "packageManager": "bun@1.3.5"
}
